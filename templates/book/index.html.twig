{% extends 'base.html.twig' %}

{% block title %}Список книг{% endblock %}

{% block body %}
    <h1>Список книг</h1>
    
    <a href="{{ path('book_new') }}" class="btn btn-success">Добавить книгу</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Автор</th>
                <th>ISBN</th>
                <th>Год издания</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for book in pagination %}
            <tr>
                <td>{{ book.id }}</td>
                <td><a href="{{ path('book_show', {'id': book.id}) }}">{{ book.title }}</a></td>
                <td><a href="{{ path('author_show', {'id': book.author.id}) }}">{{ book.author.name }}</a></td>
                <td>{{ book.isbn ?? '-' }}</td>
                <td>{{ book.publishedYear ?? '-' }}</td>
                <td>
                    <a href="{{ path('book_edit', {'id': book.id}) }}" class="btn btn-sm">Редактировать</a>
                    <form method="post" action="{{ path('book_delete', {'id': book.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены?')">Удалить</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Книги не найдены</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="pagination">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}

